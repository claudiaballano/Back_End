<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body>

    <%- include('./partials/navigation'); %>
    <header>
        <%- include('./partials/header'); %>
    </header>
    <main class="main">
        <div class="container">
            <div class='row'>
                <% photos.forEach((photo)=> { %>
                <div class="column column-40" data-="<%= photo.id %>">
                    <p class="title"><%= photo.titulo %>, <%= photo.fecha_creacion %></p>
                    <img src="<%= photo.url %>">
                    <div style="height:50px; width:100%; background-color:rgb(<%= photo.color%>)">
                    </div>
                    <p class="title"><%= photo.color %></p>
                    <a href="/gallery/edit/<%= photo.id %>" class="button button-outline edit">Edit</a>
                    <a class="button delete">Delete</a>
                </div>
                <% }); %>
            </div>
        </div>
        </div>

    </main>

</body>
<style>
    body {
        margin: 2rem 4rem
    }

    .column-40 {
        margin-left: 4rem;

    }

    .container {
        display: flex;
        margin: 0;
        padding: 0;
    }

    .row {
        margin: 0;
        padding: 0;
    }

    img {
        object-fit: cover;
        height: 400px;
        width: 100%;
    }

    .title {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-weight: 300;
        margin: 0;
        color: black;

    }

    .main {
        margin-top: 5rem;
    }
</style>
<script src="script.js"></script>

</html>